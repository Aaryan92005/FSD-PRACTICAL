{
  "name": "grocery-erp-system",
  "version": "1.0.0",
  "description": "Complete Grocery ERP System with React Frontend and Node.js Backend",
  "main": "index.js",
  "scripts": {
    "install:backend": "cd grocery-erp-backend && npm install",
    "install:frontend": "cd grocery-erp-frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build:backend": "cd grocery-erp-backend && npm run build",
    "build:frontend": "cd grocery-erp-frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd grocery-erp-backend && npm start",
    "start:frontend": "cd grocery-erp-frontend && npm start",
    "dev:backend": "cd grocery-erp-backend && npm run dev",
    "dev:frontend": "cd grocery-erp-frontend && npm start",
    "test:backend": "cd grocery-erp-backend && npm test",
    "test:frontend": "cd grocery-erp-frontend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "health-check": "node scripts/health-check.js",
    "deploy": "bash scripts/deploy.sh"
  },
  "keywords": [
    "grocery",
    "erp",
    "inventory",
    "management",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Grocery ERP Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "socket.io": "^4.8.1"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/grocery-erp-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/grocery-erp-system/issues"
  },
  "homepage": "https://github.com/yourusername/grocery-erp-system#readme"
}